<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="tqt.com.kimdungapp.MainActivity">

    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@color/colorBackGroundTitle"
        android:padding="10dp">

        <TextView
            android:paddingTop="10dp"
            android:layout_gravity="center"
            android:id="@+id/txt_tilte_truyen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuyển Tập Kiếm Hiệp"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:paddingTop="10dp"
            android:layout_gravity="center"
            android:id="@+id/txt_tac_gia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_tilte_truyen"
            android:text="Tác giả: Kim Dung"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_title"
        android:background="@color/colorWhiteE0"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/colorWhiteE0"
            android:dividerHeight="5dp"
            android:layout_below="@id/layout_title"></ListView>
    </LinearLayout>


</RelativeLayout>
